- total_value = 0
- transactions.where(date: Date.today.beginning_of_month..Date.today.end_of_month).each do |t| 
  - if t.type == "Income"
    - total_value += t.value
  - else
    - total_value -= t.value
- if total_value <= 0
  %i.icon-arrow-down.icon-red 
- else 
  %i.icon-arrow-up.icon-green
= number_to_currency total_value.abs