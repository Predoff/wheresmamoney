= render 'includes/header'

#container.container.clearfix
  #new_transaction_container
    %h2 Novo Registro
    %ul.nav.nav-tabs
      %li#outgoes_tab.active
        %a{ :'data-url' => new_outgo_url } Gastos
      %li#incomes_tab
        %a{ :'data-url' => new_income_url } Ganhos
    .content-container
      = render 'outgoes/new'
      = render 'incomes/new'

  #summary_container
    %h2 Extratos
    %h2.separator= '|'
    %h2
      %a Gráficos
    %ul.nav.nav-tabs
      %li.active
        %a Recente
      %li
        %a no Mês
      %li
        %a no Ano
      %li
        %a Personalizado 

    .content-container
      #filter_container
        %form.form-inline
          %label.radio Mostrar:
          %label.radio{ for: 'show_option-outgoes', :'data-url' => outgoes_path }
            = radio_button_tag :show, :'option-outgoes'
            Gastos
          %label.radio{ :for => 'show_option-incomes', :'data-url' => incomes_path }
            = radio_button_tag :show, :'option-incomes'
            Ganhos
          %label.radio{ for: 'show_option-both', :'data-url' => transactions_path }
            = radio_button_tag :show, :'option-both', checked: 'checked'
            Ambos

      #summary_content