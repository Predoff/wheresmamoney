#header.clearfix
  .container
    %h1 Wherezmamoney?!
    .btn-group.user-menu
      %a.btn{ href: '#' }
        %i.icon-user.icon-white
        = @user.name
      %a.btn.dropdown-toggle{ :'data-toggle' => 'dropdown', :href => '#' }
        %span.caret
      %ul.dropdown-menu
        %li
          %a{ href: '#' }
            %i.icon-cog
            Configurações
        %li.divider
        %li
          %a{ href: '#' } Sair

#container.container.clearfix
  #new_register_container
    %h2 Novo Registro
    %ul.nav.nav-tabs
      %li#outgoes_tab.active
        %a{ :'data-url' => new_outgo_url } Gastos
      %li#incomes_tab
        %a{ :'data-url' => new_income_url } Ganhos
    .content-container
      %form#outgoes_form
        .value.clearfix
          %label{ for: 'value' } Quanto
          .input-prepend.entry
            %span.add-on R$
            %input{ name: 'value', type: 'text', placeholder: 'Ex.: 10,00' }

        .date.clearfix
          %label{ for: 'date' } Quando
          .input-append.entry
            %input{ type: 'text', placeholder: 'Ex.: 12/10/2012', name: 'date' }
            %button.btn{ type: 'button' }
              %i.icon-calendar

        .category.clearfix
          %label{ for: 'category' } Categoria
          .entry
            %select{ name: 'category' }
              - @categories.each do |category|
                %option{ value: "#{category.id}" }= category.name

        %label{ for: 'tag' } Tags
        .entry
          %input.tags.beautiful-box{ name: 'tags', type: 'hidden', data: {tags: @tags} }
            
        %label{ for: 'description' } Descrição
        .entry
          %textarea{ name: 'description', rows: '2', placeholder: 'Ex.: Sanduíche muito louco' }

        .form-actions
          %input.btn.btn-primary{ type: 'submit', value: 'Save' }
          %input.btn{ type: 'reset', value: 'Clean' }

      %form#incomes_form.invisible
        .value.clearfix
          %label{ for: 'value' } Quanto
          .input-prepend.entry
            %span.add-on R$
            %input{ name: 'value', type: 'text', placeholder: 'Ex.: 10,00' }

        .date.clearfix
          %label{ for: 'date' } Quando
          .input-append.entry
            %input{ type: 'text', placeholder: 'Ex.: 12/10/2012', name: 'date' }
            %button.btn{ type: 'button' }
              %i.icon-calendar

        .source.clearfix
          %label{ for: 'source' } Fonte
          .entry
            %select{ name: 'source' }
              - 5.times do
                %option Opção

        %label{ for: 'description' } Descrição
        .entry
          %textarea{ name: 'description', rows: '2', placeholder: 'Ex.: Sanduíche muito louco' }

        .form-actions
          %input.btn.btn-primary{ type: 'submit', value: 'Save' }
          %input.btn{ type: 'reset', value: 'Clean' }

  #summary_container
    %h2 Extratos
    %ul.nav.nav-tabs
      %li.active
        %a Recente
      %li
        %a no Mês
      %li
        %a no Ano
      %li
        %a Personalizado 

    .content-container
      #filter_container
        %form.form-inline
          %label.radio Mostrar:
          %label.radio{ for: 'show_option1'}
            = radio_button_tag :show, :option1
            Gastos
          %label.radio{ for: 'show_option2'}
            = radio_button_tag :show, :option2
            Ganhos
          %label.radio{ for: 'show_option3'}  
            = radio_button_tag :show, :option3, checked: 'checked'
            Ambos

      %h4 Movimentações Recentes

      %table.table.table-condensed.table-hover
        %thead
          %tr
            %th Data
            %th Valor
            %th Categoria
            %th Tags
            %th Descrição
            %th
        %tbody
          - 10.times do
            %tr
              - 5.times do
                %td asd
              %td
                .btn-group
                  %button.btn.btn-mini.btn-success
                    %i.icon-pencil
                  %button.btn.btn-mini.btn-danger
                    %i.icon-remove